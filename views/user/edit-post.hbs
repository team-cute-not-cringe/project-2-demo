<h2>Edit the post {{post.title}}</h2>

<form action="/post/{{post._id}}/edit" method="post">
  <label>
    Image Link:
    <input
      type="url"
      value="{{post.imageUrl}}"
    />
  </label>
  <label>
    Title:
    <input type="text" name="title" value="{{post.title}}" />
  </label>

  <label>
    Artist:
    <input type="text" name="artist" value="{{post.artist}}" />
  </label>

  <label>
    Link to Artist:
    <input
      name="artistLink"
      value="{{post.artistLink}}"
    ></input>
  </label>

  <button type="submit">Save changes</button>
  
</form>
<form action="/post/{{post._id}}/delete" method="POST">
    <button type="submit">Delete Post</button>
</form>